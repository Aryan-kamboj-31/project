<%- include('layouts/layout', { body: `` }) %>

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #1d5aea, #4b6cb7); /* Gradient background */
        color: #fff;
    }

    .bck1 {
        background: rgba(255, 255, 255, 0.1); /* Light overlay */
        backdrop-filter: blur(10px); /* Blur effect */
        position: fixed; /* Fixed position */
        width: 100%;
        height: 100%;
        z-index: -1;
        top: 0;
        left: 0;
    }

    .blur1 {
        background: rgba(255, 255, 255, 0.95); /* Slightly more opaque background */
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2); /* Enhanced shadow */
        max-width: 450px;
        margin: 100px auto;
        padding: 40px;
        position: relative;
        z-index: 1;
        text-align: center;
        animation: fadeIn 1.5s ease-in-out; /* Faster fade-in animation */
    }

    .blur1 h1 {
        margin-bottom: 20px;
        color: #333;                                 
        font-size: 2.2em;
        font-weight: 600;
    }

    .blur1 form {
        display: flex;
        flex-direction: column;
        gap: 20px; /* Add space between form elements */
    }

    .blur1 form div {
        position: relative;
    }

    .blur1 label {
        position: absolute;
        top: 50%;
        left: 15px;
        font-weight: 500;
        color: #999;
        font-size: 14px;
        transform: translateY(-50%);
        transition: 0.3s ease;
        pointer-events: none;
    }

    .blur1 input {
        width: 100%;
        padding: 15px;
        border: 1px solid #ddd;
        border-radius: 8px;
        font-size: 16px;
        background: #fff;
        color: #333;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow */
        transition: box-shadow 0.3s ease;
    }

    .blur1 input:focus {
        border-color: #1d5aea; /* Highlight border on focus */
        box-shadow: 0 0 8px rgba(29, 90, 234, 0.4); /* Focus effect */
    }

    .blur1 input:focus + label,
    .blur1 input:not(:placeholder-shown) + label {
        top: -10px;
        left: 15px;
        font-size: 12px;
        color: #1d5aea;
        font-weight: normal;
    }

    .blur1 button {
        background-color: #1d5aea;
        color: #fff;
        padding: 15px;
        border: none;
        border-radius: 8px;
        font-size: 18px;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .blur1 button:hover {
        background-color: #154bb5; /* Darker color on hover */
        transform: scale(1.05); /* Slight zoom effect */
    }

    .blur1 button:active {
        transform: scale(0.95); /* Press effect */
    }

    /* Animation for background */
    @keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }
</style>

<div class="bck1"></div>

<div class="blur1">
    <h1>Admin Login</h1>
    <form action="/admin" method="post">
        <div>
            <input type="email" id="username" name="admin_email" required placeholder=" ">
            <label for="username">Email:</label>
        </div>
        <div>
            <input type="password" id="password" name="admin_pass" required placeholder=" ">
            <label for="password">Password:</label>
        </div>
        <button type="submit">Login</button>
    </form>
</div>

<%- include('layouts/footer') %>
