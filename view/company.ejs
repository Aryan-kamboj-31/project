<%- include('layouts/layout', { body: `` }) %>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
        background: #f4f4f9; /* Light background color */
    }

    h2 {
        text-align: center;
        margin: 40px 0;
        color: #333;
        font-size: 2em;
        font-weight: 600;
    }

    form {
        display: flex;
        justify-content: center;
        margin-bottom: 40px;
    }

    input[type="search"] {
        padding: 12px;
        font-size: 16px;
        border: 2px solid #ddd;
        border-radius: 5px 0 0 5px;
        outline: none;
        transition: border-color 0.3s ease;
        width: 300px;
    }

    input[type="search"]:focus {
        border-color: #1d5aea; /* Highlight border on focus */
    }

    button[type="submit"] {
        padding: 12px 25px;
        background-color: #1d5aea;
        color: #fff;
        border: none;
        border-radius: 0 5px 5px 0;
        cursor: pointer;
        font-size: 16px;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    button[type="submit"]:hover {
        background-color: #154bb5; /* Darker color on hover */
        transform: scale(1.05); /* Slight zoom effect */
    }

    button[type="submit"]:active {
        transform: scale(0.95); /* Press effect */
    }

    table {
        width: 90%;
        margin: 20px auto;
        border-collapse: collapse;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Subtle shadow */
        background: #fff;
        border-radius: 8px;
        overflow: hidden;
    }

    th, td {
        padding: 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #1d5aea;
        color: #fff;
        font-weight: bold;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9; /* Alternate row color */
    }

    tr:hover {
        background-color: #e9ecef; /* Highlight row on hover */
    }

    button {
        background-color: #1d5aea;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 14px;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }
    
    button:hover {
        background-color: #154bb5; /* Darker color on hover */
        transform: scale(1.05); /* Slight zoom effect */
    }

    button:active {
        transform: scale(0.95); /* Press effect */
    }
</style>

<h2>Company List</h2>

<form action="/company" method="post">
    <input type="search" placeholder="Search for a post" name="company_requirement">
    <button type="submit">Search</button>
</form>

<% if (user.length > 0) { %>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Salary</th>
                <th>Location</th>
                <th>Requirements</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% user.forEach(function(company) { %>
                <tr>
                    <td><%= company.compuny_name %></td>
                    <td><%= company.compuny_salary %></td>
                    <td><%= company.compuny_location %></td>
                    <td><%= company.company_requirement %></td>
                    <td>
                        <form action="/apply/<%= company.company_requirement %>" method="get" style="display:inline;">
                            <button type="submit">Apply Now</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
<% } %>

<%- include('layouts/footer') %>
