<!-- Modal -->
<div id="modal" class="modal">
    <div class="modal-content" id="modal-content">
        <!-- Modal text will be injected here by JavaScript -->
    </div>
    <span id="modal-close" class="modal-close">&times;</span>
</div>

<%- include('layouts/footer') %>

<script>
    // JavaScript for Modal functionality
    const modal = document.getElementById('modal');
    const modalContent = document.getElementById('modal-content');
    const modalClose = document.getElementById('modal-close');

    document.querySelectorAll('.features li, .faq ul li, .how-it-works ul li').forEach(item => {
        item.addEventListener('click', () => {
            modalContent.innerHTML = `<h3>${item.querySelector('.question')?.textContent || item.textContent}</h3><p>More information about ${item.querySelector('.question')?.textContent || item.textContent}.</p>`;
            modal.style.display = 'block';
        });
    });

    modalClose.addEventListener('click', () => {
        modal.style.display = 'none';
    });

    window.addEventListener('click', (event) => {
        if (event.target === modal) {
            modal.style.display = 'none';
        }
    });
</script>
