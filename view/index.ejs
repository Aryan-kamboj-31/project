<%- include('layouts/layout', { body: '' }) %>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        color: #333;
    }

    .image {
        background-image: url('/css/pexels.jpg');
        background-size: cover;
        background-position: center;
        color: #fff;
        height: 500px;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        animation: fadeIn 2s ease-in-out;
    }

    @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    .modal-content {
        border-radius: 10px;
    }
</style>

<div class="container">
    <div class="image d-flex flex-column justify-content-center">
        <h1 class="display-4">Welcome to NextStep Jobs</h1>
        <p>Track your job applications efficiently. Still using Excel or Google Sheets? Manage everything here!</p>
    </div>

    <section class="features py-5 text-center">
        <h2 class="text-primary">Features</h2>
        <p>Manage your job search more effectively.</p>
        <ul class="list-unstyled">
            <li class="list-item py-2">Track job applications</li>
            <li class="list-item py-2">Organize interview schedules</li>
            <li class="list-item py-2">Monitor application status</li>
            <li class="list-item py-2">Get personalized job recommendations</li>
            <li class="list-item py-2">Receive job alerts directly to your inbox</li>
        </ul>
    </section>

    <section class="how-it-works py-5 bg-light text-center">
        <h2 class="text-primary">How It Works</h2>
        <ul class="list-unstyled">
            <li class="list-item py-2">Sign up and create a profile</li>
            <li class="list-item py-2">Start adding job applications</li>
            <li class="list-item py-2">Use our tools to track interviews</li>
            <li class="list-item py-2">Get recommendations based on your profile</li>
        </ul>
    </section>

    <section class="testimonials py-5 text-center">
        <h2 class="text-primary">Testimonials</h2>
        <div class="row">
            <div class="col-md-6">
                <blockquote class="blockquote">
                    <p>"NextStep Jobs has revolutionized how I track my job applications!"</p>
                    <footer class="blockquote-footer">John Doe</footer>
                </blockquote>
            </div>
            <div class="col-md-6">
                <blockquote class="blockquote">
                    <p>"I love the resume builder and the job recommendations."</p>
                    <footer class="blockquote-footer">Jane Smith</footer>
                </blockquote>
            </div>
        </div>
    </section>

    <section class="faq py-5 bg-light text-center">
        <h2 class="text-primary">Frequently Asked Questions</h2>
        <div class="accordion" id="faqAccordion">
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                        How does the job tracking feature work?
                    </button>
                </h2>
                <div id="faq1" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        Our job tracking tool allows you to add job listings, monitor status, and set follow-up reminders.
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                        Can I use NextStep Jobs for free?
                    </button>
                </h2>
                <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        Yes, our Free Plan offers basic job tracking and resume-building tools at no cost.
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="cta text-center py-5">
        <h2 class="text-primary">Get Started Today</h2>
        <a href="/register" class="btn btn-primary btn-lg">Sign Up for Free</a>
    </section>
</div>

<!-- Modal -->
<div id="modal" class="modal fade" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content text-center p-4">
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            <div id="modal-body">More information...</div>
        </div>
    </div>
</div>

<%- include('layouts/footer') %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

<script>
    document.querySelectorAll('.features li, .faq ul li, .how-it-works ul li').forEach(item => {
        item.addEventListener('click', () => {
            const modalContent = item.textContent;
            document.getElementById('modal-body').textContent = `More information about ${modalContent}.`;
            const modal = new bootstrap.Modal(document.getElementById('modal'));
            modal.show();
        });
    });
</script>
