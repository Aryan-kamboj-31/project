<%- include('layouts/layout', { body: '' }) %>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
        background-color: #1a1a1a; /* Dark gray background */
        color: #d3d3d3; /* Light gray text */
    }

    .header {
        background-color: #000; /* Black header */
        color: #fff;
        padding: 20px;
        text-align: center;
    }

    .image {
        background-color: #333; /* Dark gray background for hero section */
        height: 400px;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        color: #fff;
        animation: fadeIn 2s ease-in-out;
    }

    @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    .feature-icons i {
        font-size: 40px;
        color: #f0ad4e; /* Orange for feature icons */
        margin-bottom: 10px;
    }

    .card {
        background-color: #222; /* Dark gray cards */
        border: 1px solid #555;
        color: #fff;
    }

    .pricing-plan:hover {
        background-color: #444; /* Dark hover effect */
    }

    .team img {
        border-radius: 50%;
        width: 150px;
        height: 150px;
        object-fit: cover;
    }

    footer {
        background-color: #000; /* Black footer */
        color: #d3d3d3;
    }

    a {
        color: #f0ad4e; /* Orange links */
    }

    a:hover {
        color: #ffbe76; /* Light orange hover */
    }
</style>

<div class="header">
    <h1>NextStep Jobs</h1>
    <p>Manage your job applications efficiently with our powerful tools!</p>
</div>

<div class="container-fluid image d-flex flex-column justify-content-center">
    <h1 class="display-4">Welcome to NextStep Jobs</h1>
    <p>Effortlessly organize your job applications.</p>
</div>

<div class="container py-5" id="features">
    <h2 class="text-primary text-center">Features</h2>
    <div class="row text-center feature-icons">
        <div class="col-md-4">
            <i class="bi bi-check-circle"></i>
            <h5>Track Applications</h5>
            <p>Monitor all your applications with real-time updates.</p>
        </div>
        <div class="col-md-4">
            <i class="bi bi-calendar-event"></i>
            <h5>Organize Interviews</h5>
            <p>Keep track of important dates and interviews.</p>
        </div>
        <div class="col-md-4">
            <i class="bi bi-bell"></i>
            <h5>Get Job Alerts</h5>
            <p>Receive job alerts based on your preferences.</p>
        </div>
    </div>
</div>

<section class="bg-dark py-5" id="how-it-works">
    <div class="container text-center">
        <h2 class="text-primary">How It Works</h2>
        <div class="row">
            <div class="col-md-3">
                <h5>Step 1</h5>
                <p>Sign up and create your profile.</p>
            </div>
            <div class="col-md-3">
                <h5>Step 2</h5>
                <p>Track job applications.</p>
            </div>
            <div class="col-md-3">
                <h5>Step 3</h5>
                <p>Manage interviews and deadlines.</p>
            </div>
            <div class="col-md-3">
                <h5>Step 4</h5>
                <p>Receive job alerts.</p>
            </div>
        </div>
    </div>
</section>

<section class="pricing py-5" id="pricing">
    <div class="container">
        <h2 class="text-primary text-center">Pricing Plans</h2>
        <div class="row text-center">
            <div class="col-md-4">
                <div class="card pricing-plan p-4">
                    <h3>Free</h3>
                    <p>Basic tools for individual job seekers.</p>
                    <p class="price">$0/month</p>
                    <ul class="list-unstyled">
                        <li>Track applications</li>
                        <li>Resume builder</li>
                        <li>Email notifications</li>
                    </ul>
                    <a href="/register" class="btn btn-outline-primary">Get Started</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card pricing-plan p-4">
                    <h3>Premium</h3>
                    <p>More features for power users.</p>
                    <p class="price">$15/month</p>
                    <ul class="list-unstyled">
                        <li>Personalized job alerts</li>
                        <li>Interview scheduling</li>
                        <li>Priority support</li>
                    </ul>
                    <a href="/register" class="btn btn-primary">Get Premium</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card pricing-plan p-4">
                    <h3>Pro</h3>
                    <p>For advanced users and recruiters.</p>
                    <p class="price">$30/month</p>
                    <ul class="list-unstyled">
                        <li>Advanced analytics</li>
                        <li>Data export</li>
                        <li>Integration with LinkedIn</li>
                    </ul>
                    <a href="/register" class="btn btn-outline-primary">Go Pro</a>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="team py-5 bg-dark text-center" id="team">
    <div class="container">
        <h2 class="text-primary">Meet the Team</h2>
        <div class="row">
            <div class="col-md-4">
                <img src="/css/team1.jpg" alt="Team Member 1">
                <h5>John Doe</h5>
                <p>Founder & CEO</p>
            </div>
            <div class="col-md-4">
                <img src="/css/team2.jpg" alt="Team Member 2">
                <h5>Jane Smith</h5>
                <p>Chief Technology Officer</p>
            </div>
            <div class="col-md-4">
                <img src="/css/team3.jpg" alt="Team Member 3">
                <h5>Michael Lee</h5>
                <p>Head of Marketing</p>
            </div>
        </div>
    </div>
</section>

<section class="faq py-5" id="faq">
    <div class="container">
        <h2 class="text-primary text-center">Frequently Asked Questions</h2>
        <div class="accordion" id="faqAccordion">
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                        How does the job tracking feature work?
                    </button>
                </h2>
                <div id="faq1" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        Our job tracking tool allows you to monitor listings, status, and set follow-up reminders.
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                        Can I use NextStep Jobs for free?
                    </button>
                </h2>
                <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        Yes, our Free Plan offers basic tools like job tracking and resume building at no cost.
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<footer class="bg-black text-white py-4">
    <div class="container text-center">
        <p>&copy; 2024 NextStep Jobs. All rights reserved.</p>
        <ul class="list-inline">
            <li class="list-inline-item"><a href="#" class="text-white">Privacy Policy</a></li>
            <li class="list-inline-item"><a href="#" class="text-white">Terms of Service</a></li>
            <li class="list-inline-item"><a href="#" class="text-white">Contact Us</a></li>
        </ul>
    </div>
</footer>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

<script>
    document.querySelectorAll('.features li, .faq ul li, .how-it-works ul li').forEach(item => {
        item.addEventListener('click', () => {
            const modalContent = item.textContent;
            document.getElementById('modal-body').textContent = `More information about ${modalContent}.`;
            const modal = new bootstrap.Modal(document.getElementById('modal'));
            modal.show();
        });
    });
</script>

<%- include('layouts/footer') %>
