<%- include('layouts/layout', { body: '' }) %>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        color: #333;
    }

    .hero {
        background-color: #1d5aea;
        color: #fff;
        height: 500px;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        animation: fadeIn 2s ease-in-out;
    }

    @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    .feature-icons i {
        font-size: 40px;
        color: #1d5aea;
        margin-bottom: 10px;
    }

    .pricing-plan:hover {
        background-color: #e9ecef;
    }

    .team img {
        border-radius: 50%;
        width: 150px;
        height: 150px;
        object-fit: cover;
    }

    .testimonials {
        background-color: #e9ecef;
        padding: 50px 0;
    }

    .testimonials .testimonial-card {
        background-color: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
    }

    .contact-form input,
    .contact-form textarea {
        margin-bottom: 15px;
    }

    .gallery img {
        border-radius: 10px;
        max-width: 100%;
        height: auto;
    }
</style>

<div class="container-fluid hero d-flex flex-column justify-content-center align-items-center">
    <h1 class="display-4 text-white">Welcome to NextStep Jobs</h1>
    <p class="text-white">Manage your job applications efficiently with our powerful tools!</p>
    <a href="/register" class="btn btn-light btn-lg mt-3">Get Started</a>
</div>

<div class="container py-5" id="features">
    <h2 class="text-primary text-center mb-4">Features</h2>
    <p class="text-center mb-5">Everything you need to manage your job search effectively.</p>
    <div class="row text-center feature-icons">
        <div class="col-md-4">
            <i class="bi bi-check-circle"></i>
            <h5>Track Applications</h5>
            <p>Monitor all your applications in one place with real-time updates.</p>
        </div>
        <div class="col-md-4">
            <i class="bi bi-calendar-event"></i>
            <h5>Organize Interviews</h5>
            <p>Keep track of upcoming interviews and important dates.</p>
        </div>
        <div class="col-md-4">
            <i class="bi bi-bell"></i>
            <h5>Get Job Alerts</h5>
            <p>Receive tailored job alerts based on your profile and preferences.</p>
        </div>
    </div>
</div>

<section class="testimonials py-5">
    <div class="container">
        <h2 class="text-primary text-center mb-4">What Our Users Say</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="testimonial-card text-center">
                    <p>"NextStep Jobs helped me land my dream job in no time! The tools are easy to use and extremely helpful."</p>
                    <h5>Emily R.</h5>
                    <small>Software Engineer</small>
                </div>
            </div>
            <div class="col-md-4">
                <div class="testimonial-card text-center">
                    <p>"The interview scheduling and job alerts were lifesavers! I highly recommend upgrading to Premium."</p>
                    <h5>David K.</h5>
                    <small>Marketing Manager</small>
                </div>
            </div>
            <div class="col-md-4">
                <div class="testimonial-card text-center">
                    <p>"I love the simplicity and the features that help me track my job applications effortlessly."</p>
                    <h5>Sarah P.</h5>
                    <small>Data Analyst</small>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="bg-light py-5" id="how-it-works">
    <div class="container text-center">
        <h2 class="text-primary mb-4">How It Works</h2>
        <div class="row">
            <div class="col-md-3">
                <h5>Step 1</h5>
                <p>Sign up and create your personalized profile.</p>
            </div>
            <div class="col-md-3">
                <h5>Step 2</h5>
                <p>Add job applications and track progress.</p>
            </div>
            <div class="col-md-3">
                <h5>Step 3</h5>
                <p>Use our tools to manage interviews and deadlines.</p>
            </div>
            <div class="col-md-3">
                <h5>Step 4</h5>
                <p>Receive job recommendations and alerts.</p>
            </div>
        </div>
    </div>
</section>

<section class="team py-5 text-center" id="team">
    <div class="container">
        <h2 class="text-primary mb-4">Meet the Team</h2>
        <div class="row">
            <div class="col-md-4">
                <img src="/css/team1.jpg" alt="Team Member 1" class="img-fluid mb-3">
                <h5>John Doe</h5>
