<%- include('layouts/layout', { body: `` }) %>

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #1d5aea, #4b6cb7); /* Gradient background */
        color: #fff;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .bck2 {
        background: rgba(255, 255, 255, 0.1); /* Light overlay */
        backdrop-filter: blur(8px); /* Subtle blur effect */
        position: absolute;
        width: 100%;
        height: 100%;
        z-index: -1;
    }

    .blur2 {
        background: rgba(255, 255, 255, 0.9); /* Slightly opaque background */
        border-radius: 20px;
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.3); /* Enhanced shadow */
        max-width: 700px;
        margin: 60px auto;
        padding: 50px;
        position: relative;
        z-index: 1;
        text-align: center;
        animation: fadeIn 2s ease-in-out; /* Fade-in animation */
        border: 1px solid #ddd; /* Light border */
    }

    .blur2 h1 {
        margin-bottom: 30px;
        color: #1d5aea; /* Accent color for the header */
        font-size: 2.8em;
        font-weight: 600;
        text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.2); /* Text shadow for better readability */
    }

    .blur2 p {
        font-size: 1.3em;
        color: #333;
        margin: 15px 0;
        line-height: 1.8;
    }

    .blur2 button {
        background-color: #1d5aea;
        color: #fff;
        padding: 15px 35px;
        border: none;
        border-radius: 12px;
        font-size: 18px;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
        margin-top: 20px;
        display: inline-block;
        text-transform: uppercase;
        font-weight: 500;
    }

    .blur2 button:hover {
        background-color: #154bb5;
        transform: scale(1.05); /* Slight zoom effect */
    }

    .blur2 button:active {
        transform: scale(0.95); /* Press effect */
    }

    /* Animation for background */
    @keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .blur2 {
            padding: 40px;
            margin: 30px;
        }

        .blur2 h1 {
            font-size: 2.2em;
        }

        .blur2 p {
            font-size: 1.1em;
        }

        .blur2 button {
            font-size: 16px;
            padding: 12px 28px;
        }
    }

    @media (max-width: 480px) {
        .blur2 {
            padding: 20px;
            margin: 15px;
        }

        .blur2 h1 {
            font-size: 1.8em;
        }

        .blur2 p {
            font-size: 1em;
        }

        .blur2 button {
            font-size: 14px;
            padding: 10px 24px;
        }
    }
</style>

<div class="bck2"></div>

<div class="blur2">
    <h1>User Profile</h1>
    <% if (user) { %>
        <p><strong>Username:</strong> <%= user.name %></p>
        <p><strong>Email:</strong> <%= user.email %></p>
        <p><strong>Skills:</strong> <%= user.skills %></p>
        <p><strong>Phone Number:</strong> <%= user.number %></p>
    <% } else { %>
        <p>No user information available.</p>
    <% } %>
    <form action="/logout" method="POST" style="display:inline;">
        <button type="submit">Logout</button>
    </form>
</div>

<%- include('layouts/footer') %>
